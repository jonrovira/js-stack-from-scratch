{
    "extends": [
        "airbnb",
        "plugin:flowtype/recommended"
    ],
    "env": {
        "browser": true,
        "jest": true
    },
    "plugins": [
        "flowtype",
        "compat"
    ],
    "rules": {
        "compat/compat": 2,
        "indent": ["error", 4],
        "no-multiple-empty-lines": ["error", { "max": 3 }],
        "react/jsx-indent": ["error", 4]
    }
}
